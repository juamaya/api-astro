---
interface Props {
  title?: string;
  descripcion?: string;
  href?: string;
 imagen?: string;
}

const { href, title,  descripcion , imagen} = Astro.props;
---

<div class="card">
  <img src={imagen} alt="Imagen" class="card-image" />
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">
    {descripcion}
    </p>
    <a href={href} class="card-link">Ver m√°s</a>
  </div>
</div>

<style>
  .card {
    width: 300px;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-content {
    padding: 20px;
  }

  .card-title {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .card-description {
    margin-bottom: 15px;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: #007bff;
  }
</style>
